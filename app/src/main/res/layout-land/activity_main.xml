<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/id_ListView"
        android:layout_width="442dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ListView>

    <TextView
        android:id="@+id/id_horiTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="20dp"
        android:text="Made by Rishi Sheth "
        app:layout_constraintStart_toEndOf="@+id/id_ListView"
        app:layout_constraintTop_toBottomOf="@+id/id_horiTextView3" />

    <TextView
        android:id="@+id/id_horiTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="184dp"
        android:text="Pick a contact"
        app:layout_constraintStart_toEndOf="@+id/id_ListView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_horiTextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="142dp"
        android:layout_marginTop="13dp"
        android:text="..."
        app:layout_constraintStart_toEndOf="@+id/id_ListView"
        app:layout_constraintTop_toBottomOf="@+id/id_horiTextView" />

    <ImageView
        android:id="@+id/id_imageview3"
        android:layout_width="92dp"
        android:layout_height="98dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="72dp"
        app:layout_constraintStart_toEndOf="@+id/id_ListView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/questionmark" />

    <Button
        android:id="@+id/id_remove"
        android:layout_width="101dp"
        android:layout_height="52dp"
        android:layout_marginStart="140dp"
        android:layout_marginBottom="16dp"
        android:text="Remove"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/id_ListView" />

    <Button
        android:id="@+id/id_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginBottom="16dp"
        android:text="Add Contact"
        app:layout_constraintBottom_toTopOf="@+id/id_remove"
        app:layout_constraintStart_toEndOf="@+id/id_ListView" />

</androidx.constraintlayout.widget.ConstraintLayout>